<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Container for Player Controls -->
    <FrameLayout
        android:id="@+id/player_controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/btn_main_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_manage"
            android:contentDescription="Settings"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </FrameLayout>

    <!-- Container for Playlist -->
    <FrameLayout
        android:id="@+id/playlist_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" /> <!-- Ensure no background attribute here -->

    <!-- Container for Visualizer -->
    <FrameLayout
        android:id="@+id/visualizer_container"
        android:layout_width="match_parent"
        android:layout_height="200dp" /> <!-- Changed from wrap_content -->
        <!-- Adjust layout_height for visualizer as needed, e.g., fixed height or based on content -->

</LinearLayout>
