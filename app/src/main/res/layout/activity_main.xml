<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Container for Player Controls -->
    <FrameLayout
        android:id="@+id/player_controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Container for Playlist -->
    <FrameLayout
        android:id="@+id/playlist_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFF0000" /> <!-- Added distinct background -->

    <!-- Container for Visualizer -->
    <FrameLayout
        android:id="@+id/visualizer_container"
        android:layout_width="match_parent"
        android:layout_height="200dp" /> <!-- Changed from wrap_content -->
        <!-- Adjust layout_height for visualizer as needed, e.g., fixed height or based on content -->

</LinearLayout>
