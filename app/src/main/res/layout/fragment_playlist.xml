<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/winamp_playlist_background"
    tools:context=".ui.playlist.PlaylistFragment">

    <ImageButton
        android:id="@+id/btn_scan_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eject"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:contentDescription="Scan for Music"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_toggle_shuffle"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/btn_toggle_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@android:drawable/ic_menu_rotate"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Toggle Shuffle"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/btn_scan_music"
        app:layout_constraintBottom_toBottomOf="@id/btn_scan_music"
        app:layout_constraintStart_toEndOf="@id/btn_scan_music"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <Spinner
        android:id="@+id/spinner_sort_options"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_scan_music"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:drawable/btn_dropdown"
        android:popupBackground="@color/winamp_background_dark"
        android:dropDownSelector="@drawable/list_item_selector" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_filter_short_tracks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hide tracks < 1 min"
        android:textColor="@color/winamp_text_green"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/spinner_sort_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_playlist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/switch_filter_short_tracks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/winamp_playlist_background"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
